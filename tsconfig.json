{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2020"],
    "declaration": false,
    "declarationMap": false,
    "outDir": "./dist",
    "rootDir": "./lib",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "allowJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "pretty": true,
    "sourceMap": true
  },
  "include": ["lib"],
  "exclude": ["node_modules", "**/node_modules/**", "jest.config.js", "dist"]
}
